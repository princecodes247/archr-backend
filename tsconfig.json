{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"]
}
